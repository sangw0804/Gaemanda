<!DOCTYPE html>
<html>
  <head>
    <title>Gaemanda</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Black+Han+Sans" rel="stylesheet">
  </head>

  <body>
      <nav class="navbar navbar-expand-lg navbar-light sticky-top" style="background-color: #FA7C92;">
        <%=image_tag('roaksek1.png', class: 'img')%>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <% if current_user %>
          <%= link_to "My Profile", user_profile_path(current_user.id), class: "nav-item nav-link text-white"%>
          <%= link_to "Matching", show_user_path(current_user.id), class: "nav-item nav-link text-white"%>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "nav-item nav-link text-white" %>
          <% else %>
          <%= link_to "Register", new_user_registration_path, class: "nav-item nav-link text-white"%>
          <%= link_to "Log In", new_user_session_path, class: "nav-item nav-link text-white" %>
        <% end %>
        </div>
      </div>
      </nav>
    <%= yield %>
      <div class="d-flex justify-content-between mt-5 py-3" style="background-color: #5E5E5E;" >
        <div class="d-flex px-0 text-white" style="list-style-type: none;">Gaemanda
        </div>
        <div class="d-flex px-0 text-white" style="list-style-type: none;">Contact
        </div>
        <div class="d-flex px-0 text-white" style="list-style-type: none;">Support
        </div>
      </div>

  </body>
</html>

