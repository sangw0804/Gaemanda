<div class="box container mt-5 align-self-center">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  
  <br><%=image_tag('logo.png')%>

  <div>
    <br><p>강아지 이름</p>
    <input type="text" class="form-control" id="firstName" placeholder="" value="" required>
    <div class="invalid-feedback">
      우리 강아지 이름을 써주세요
    </div>
  </div>
  <br>

  <p>성별</p>
  <div class="btn-group btn-group-toggle" data-toggle="buttons">
    <label class="btn btn-secondary active">
      <input type="radio" name="options" id="option1" autocomplete="off" checked> 남
    </label>
    <label class="btn btn-secondary">
      <input type="radio" name="options" id="option2" autocomplete="off"> 여
    </label>
  </div>

  <br> <br>

  <div class="form-inputs">
    <p>주인님의 이메일을 알려주세요!</p>
    <%= f.input :email, required: true, autofocus: true, class:"form-group"%>
  </div>

  <br>
  <div class="form-inputs">
    <label for = "password">주인님의 비밀번호를 알려주세요!</label>
    <br> <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>

    <br>
    <div class="form-inputs">
      <label for = "password">한 번만 더 비밀번호를 알려주세요!</label>  
      <%= f.input :password_confirmation, required: true %>
    </div>
  </div>

  <br><p> 강아지 사진 첨부<%= f.file_field :image, accept: 'image/png,image/gif,image/jpeg'%></p>
  <%# 거주 지역 %>
  <div class="row">              
    <br><label for="country">주인님이 매칭을 원하시는 지역은 어디인가요?</label>
    <select class="custom-select d-block w-100" id="country" required>
      <option value="">Choose...</option>
      <option>서울특별시</option>
      <option>부산광역시</option>
      <option>대구광역시</option>
      <option>인천광역시</option>
      <option>광주광역시</option>
      <option>대전광역시</option>
      <option>울산광역시</option>
    </select>
    <div class="invalid-feedback">
      다시 골라주세요
    </div>

    <%# 광고성 글 - 애완용품 구매 유도 %>


    <br><br>
    <div class="form-actions">
      <%= f.button :submit, "회원가입 멍!" %>
    </div>
  </div>  
  <% end %>

  <br>

</div>

