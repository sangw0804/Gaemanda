<div class="box">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="mb-1 mt-3">
    <%=image_tag('logo.png', class: 'login-logo')%>
    </div>
  
    <div class="form-group">
    <label for="formGroupExampleInput">ID</label>
    <%= f.input :email, required: false, autofocus: true, label: false %>
    </div>
    <div class="form-group">
    <label for="formGroupExampleInput">PASSWORD</label>
    <%= f.input :password, required: false, label: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, "Log in", class: "btn text-white", style: "background-color:salmon;" %>
    </div>
  </div>
    <%= render "devise/shared/links" %>
  <% end %>

</div>